@model IEnumerable<BoutiqueEnLigne.Models.Commande>
@{
    ViewData["Title"] = "Mes Commandes";
}

<h2>📦 Historique de mes commandes</h2>
<hr />

@if (!Model.Any())
{
    <div class="alert alert-info">
        <p>Vous n'avez pas encore passé de commande.</p>
        <a asp-controller="Produits" asp-action="Index" class="btn btn-primary">Découvrir nos produits</a>
    </div>
}
else
{
    @foreach (var commande in Model)
    {
        <div class="card mb-3">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div>
                    <strong>Commande #@commande.NumeroCommande</strong>
                    <br />
                    <small>@commande.DateCommande.ToString("dd/MM/yyyy à HH:mm")</small>
                </div>
                <div>
                    <span class="badge bg-primary">@commande.StatutCommande</span>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <h6>Produits :</h6>
                        <ul>
                            @foreach (var ligne in commande.LignesCommande)
                            {
                                <li>
                                    @ligne.Produit.Nom -
                                    Quantité : @ligne.Quantite -
                                    Prix : @ligne.PrixUnitaire.ToString("C")
                                </li>
                            }
                        </ul>
                    </div>
                    <div class="col-md-4 text-end">
                        <h5>Total : @commande.MontantTotal.ToString("C")</h5>
                        <p class="text-muted">
                            <small>Livraison à :</small><br />
                            @commande.AdresseLivraison<br />
                            @commande.CodePostalLivraison @commande.VilleLivraison
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }
}