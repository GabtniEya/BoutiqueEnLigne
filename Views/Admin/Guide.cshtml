@{
    ViewData["Title"] = "Guide Admin";
    Layout = "_LayoutAdmin";
}

<h1 class="page-title">📖 Guide d'Utilisation du Panneau Admin</h1>

<div class="row">
    <div class="col-md-12">
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">🎯 Bienvenue dans le Panneau d'Administration</h4>
            </div>
            <div class="card-body">
                <p class="lead">Ce guide vous aidera à gérer efficacement votre boutique en ligne.</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-header bg-info text-white">
                <h5>📊 Dashboard</h5>
            </div>
            <div class="card-body">
                <ul>
                    <li>Vue d'ensemble des statistiques</li>
                    <li>Suivi des produits en stock</li>
                    <li>Dernières commandes</li>
                    <li>Produits les plus vendus</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-header bg-success text-white">
                <h5>📦 Gestion des Produits</h5>
            </div>
            <div class="card-body">
                <ul>
                    <li><strong>Ajouter :</strong> Créer de nouveaux produits</li>
                    <li><strong>Modifier :</strong> Mettre à jour prix, stock, description</li>
                    <li><strong>Supprimer :</strong> Retirer les produits obsolètes</li>
                    <li><strong>Filtrer :</strong> Rechercher par nom ou catégorie</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-header bg-warning">
                <h5>🛒 Gestion des Commandes</h5>
            </div>
            <div class="card-body">
                <ul>
                    <li><strong>Consulter :</strong> Voir toutes les commandes</li>
                    <li><strong>Statut :</strong> En cours → Expédiée → Livrée</li>
                    <li><strong>Détails :</strong> Client, produits, adresse</li>
                    <li><strong>Filtrer :</strong> Par statut ou recherche</li>
                </ul>
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-4">
        <div class="card h-100">
            <div class="card-header bg-danger text-white">
                <h5>👥 Gestion des Utilisateurs</h5>
            </div>
            <div class="card-body">
                <ul>
                    <li><strong>Liste :</strong> Tous les clients inscrits</li>
                    <li><strong>Profils :</strong> Informations personnelles</li>
                    <li><strong>Historique :</strong> Commandes passées</li>
                    <li><strong>Statistiques :</strong> Total dépensé</li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header bg-dark text-white">
        <h5 class="mb-0">🔐 Informations de Connexion</h5>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <strong>⚠️ Important :</strong>
            <ul class="mb-0">
                <li>Email : <code>admin@boutique.com</code></li>
                <li>Mot de passe : <code>Admin123</code></li>
                <li>Changez ce mot de passe en production !</li>
            </ul>
        </div>
    </div>
</div>