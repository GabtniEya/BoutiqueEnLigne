@model IEnumerable<BoutiqueEnLigne.Models.CodePromo>
@{
    ViewData["Title"] = "Codes Promo";
    Layout = "_LayoutAdmin";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="page-title">🎁 Gestion des Codes Promo</h1>
    <a asp-action="AjouterCodePromo" class="btn btn-primary">
        ➕ Créer un Code Promo
    </a>
</div>

<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Code</th>
                        <th>Description</th>
                        <th>Réduction</th>
                        <th>Période</th>
                        <th>Utilisations</th>
                        <th>Montant Min.</th>
                        <th>Statut</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var code in Model)
                    {
                        <tr>
                            <td><strong class="text-primary">@code.Code</strong></td>
                            <td>@code.Description</td>
                            <td>
                                @if (code.Pourcentage > 0)
                                {
                                    <span class="badge bg-success">@code.Pourcentage%</span>
                                }
                                else if (code.MontantFixe.HasValue)
                                {
                                    <span class="badge bg-info">@code.MontantFixe.Value.ToString("C")</span>
                                }
                            </td>
                            <td>
                                <small>
                                    @code.DateDebut.ToString("dd/MM/yyyy")<br />
                                    au @code.DateFin.ToString("dd/MM/yyyy")
                                </small>
                            </td>
                            <td>
                                @code.UtilisationsActuelles /
                                @(code.UtilisationsMax.HasValue? code.UtilisationsMax.Value.ToString() : "∞")
                            </td>
                            <td>@(code.MontantMinimum.HasValue? code.MontantMinimum.Value.ToString("C") : "-")</td>
                            <td>
                                @if (code.Actif && DateTime.Now <= code.DateFin)
                                {
                                    <span class="badge bg-success">Actif</span>
                                }
                                else if (DateTime.Now > code.DateFin)
                                {
                                    <span class="badge bg-secondary">Expiré</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactif</span>
                                }
                            </td>
                            <td>
                                <form asp-action="DesactiverCodePromo" asp-route-id="@code.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm @(code.Actif ? "btn-warning" : "btn-success")">
                                        @(code.Actif ? "❌" : "✅")
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>