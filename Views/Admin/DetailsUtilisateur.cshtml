@model BoutiqueEnLigne.Models.Utilisateur
@{
    ViewData["Title"] = "Détails Utilisateur";
    Layout = "_LayoutAdmin";
}

<div class="mb-4">
    <a asp-action="Utilisateurs" class="btn btn-outline-secondary">← Retour aux utilisateurs</a>
</div>

<h1 class="page-title">👤 @Model.Prenom @Model.Nom</h1>

<div class="row">
    <div class="col-md-4">
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Informations Personnelles</h5>
            </div>
            <div class="card-body">
                <p><strong>Nom complet :</strong><br />@Model.Prenom @Model.Nom</p>
                <p><strong>Email :</strong><br />@Model.Email</p>
                <p><strong>Téléphone :</strong><br />@(Model.Telephone ?? "Non renseigné")</p>
                <p>
                    <strong>Adresse :</strong><br />
                    @(Model.Adresse ?? "Non renseignée")<br />
                    @(Model.CodePostal ?? "") @(Model.Ville ?? "")
                </p>
                <p class="mb-0"><strong>Membre depuis :</strong><br />@Model.DateInscription.ToString("dd/MM/yyyy")</p>
            </div>
        </div>

        <div class="card">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">📊 Statistiques</h5>
            </div>
            <div class="card-body">
                <p><strong>Nombre de commandes :</strong> @Model.Commandes.Count</p>
                <p class="mb-0">
                    <strong>Total dépensé :</strong>
                    <span class="text-success fs-5">@Model.Commandes.Sum(c => c.MontantTotal).ToString("C")</span>
                </p>
            </div>
        </div>
    </div>

    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0">🛒 Historique des Commandes</h5>
            </div>
            <div class="card-body p-0">
                @if (Model.Commandes.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>N° Commande</th>
                                    <th>Date</th>
                                    <th>Produits</th>
                                    <th>Montant</th>
                                    <th>Statut</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var commande in Model.Commandes.OrderByDescending(c => c.DateCommande))
                                {
                                    <tr>
                                        <td>
                                            <a asp-action="DetailsCommande" asp-route-id="@commande.Id" class="text-decoration-none">
                                                <strong>@commande.NumeroCommande</strong>
                                            </a>
                                        </td>
                                        <td>@commande.DateCommande.ToString("dd/MM/yyyy")</td>
                                        <td>@commande.LignesCommande.Count produit(s)</td>
                                        <td><strong>@commande.MontantTotal.ToString("C")</strong></td>
                                        <td><span class="badge bg-primary">@commande.StatutCommande</span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="p-4 text-center text-muted">
                        Aucune commande pour le moment.
                    </div>
                }
            </div>
        </div>
    </div>
</div>