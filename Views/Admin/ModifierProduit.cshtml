@model BoutiqueEnLigne.Models.Produit
@{
    ViewData["Title"] = "Modifier un Produit";
    Layout = "_LayoutAdmin";
}

<div class="mb-4">
    <a asp-action="Produits" class="btn btn-outline-secondary">← Retour à la liste</a>
</div>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header bg-warning">
                <h4 class="mb-0">✏️ Modifier le Produit</h4>
            </div>
            <div class="card-body">
                <form asp-action="ModifierProduit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="DateAjout" />
                    <input type="hidden" asp-for="NombreVues" />

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Nom" class="form-label">Nom du produit *</label>
                        <input asp-for="Nom" class="form-control" />
                        <span asp-validation-for="Nom" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description *</label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Prix" class="form-label">Prix (€) *</label>
                            <input asp-for="Prix" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="Prix" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Stock" class="form-label">Stock *</label>
                            <input asp-for="Stock" class="form-control" type="number" />
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CategorieId" class="form-label">Catégorie *</label>
                            <select asp-for="CategorieId" class="form-select">
                                @foreach (var cat in ViewBag.Categories)
                                {
                                    <option value="@cat.Id">@cat.Nom</option>
                                }
                            </select>
                            <span asp-validation-for="CategorieId" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="ImageUrl" class="form-label">URL de l'image</label>
                            <input asp-for="ImageUrl" class="form-control" />
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="mb-3 text-center">
                            <label class="form-label">Image actuelle :</label><br />
                            <img src="@Model.ImageUrl" alt="@Model.Nom" style="max-width: 200px; border-radius: 10px;" />
                        </div>
                    }

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-warning btn-lg">💾 Enregistrer les Modifications</button>
                        <a asp-action="Produits" class="btn btn-outline-secondary">Annuler</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}